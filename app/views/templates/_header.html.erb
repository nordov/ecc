<!-- header wrapper -->
<div class="header-wrapper">
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="<%= root_path %>">Game App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <% if user_signed_in? %>
                    <li class="nav-item">
                        <%= link_to "My Account", my_account_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Register Game", new_game_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-link" %>
                    </li>
                    <% else %>
                    <li class="nav-item">
                        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
                    </li>
                    <% end %>
                            
                    <li class="nav-item"><a class="nav-link" href="#">Readme</a></li>
                </ul>
                <form action="/game/search" id="game_search" method="post" class="d-flex" role="search">
                    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" id="search_game" name='search[term]' required>
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
</div>
<!-- header wrapper -->